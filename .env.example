# Which config to load: development, production, or testing
FLASK_CONFIG=development

# Flask entrypoint
FLASK_APP=run.py

# Local dev DB (SQLite); override in production via DATABASE_URL
DEV_DATABASE_URL=sqlite:///../instance/dev.db

# Production DB URI (e.g. PostgreSQL)
DATABASE_URL=postgresql+psycopg2://<DB_USER>:<DB_PASS>@<DB_HOST>/<DB_NAME>

# Your secret key for session signing — keep this safe!
SECRET_KEY=your-secret-key-here

# If you’re running on a custom port (default 5000)
PORT=5000

# The domain your app will serve on (for SSL certs & CORS)
DOMAIN=localhost

# SSL certificate filenames (used in development with mkcert)
SSL_CERT=<your-domain>.pem
SSL_KEY=<your-domain>-key.pem

# Comma-separated list of allowed CORS origins
# e.g. https://localhost:5000,https://myapp.com
CORS_ORIGINS=https://localhost:5000
